<p id="notice"><%= notice %></p>

<div id="home_wrapper">
  <h1 align="center">Todo App</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <div id="todo_items_wrapper">
        <% @todo_lists.each do |todo_list| %>
          <tr>
            <td><%= todo_list.title %></td>
            <td><%= todo_list.description %></td>
            <td><%= link_to 'Show', todo_list %></td>
            <td><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
            <td><%= link_to 'Delete', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <div>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Create New Todo List', new_todo_list_path %>
